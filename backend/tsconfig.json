{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings for Node + CommonJS
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["es2019"],
    "types": ["node"],

    // Interop so vi kan bruke import-syntax med CommonJS
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Other Outputs
    "sourceMap": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true
  }
}
